<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="130dp"
    android:orientation="vertical">
   <LinearLayout
       android:orientation="horizontal"
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <LinearLayout
          android:layout_weight="3.8"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <com.bhoomiputra.views.CircleImageView
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_marginTop="5dp"
              android:layout_gravity="center|top"
              android:src="@drawable/farming5"
              android:id="@+id/imageView1"
              android:clickable="true" />
      </LinearLayout>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center">
           <LinearLayout
               android:orientation="vertical"
               android:layout_weight="7"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <com.bhoomiputra.views.CircleImageView
                   android:layout_marginTop="5dp"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_gravity="center"
                   android:src="@drawable/user"
                   android:id="@+id/imageView11"
                   android:clickable="true" />

               <com.bhoomiputra.views.CircleImageView
                   android:layout_marginTop="5dp"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_gravity="center"
                   android:src="@drawable/phone"
                   android:id="@+id/imageView12"
                   android:clickable="true" />

               <com.bhoomiputra.views.CircleImageView
                   android:layout_marginTop="5dp"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_gravity="center"
                   android:src="@drawable/location"
                   android:id="@+id/imageView13"
                   android:clickable="true" />
           </LinearLayout>
           <LinearLayout
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:layout_marginTop="11dp"
                   android:text="Nand Kishore"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="#000000"
                   android:id="@+id/usernameTV"/>
               <TextView
                   android:text="3423432423"
                   android:textColor="#000000"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="18dp"
                   android:layout_marginLeft="2dp"
                   android:layout_marginRight="5dp"
                   android:id="@+id/mobileTV"/>
               <TextView
                   android:maxLines="4"
                   android:lines="3"
                   android:textColor="#000000"
                   android:id="@+id/addressTV"
                   android:layout_marginTop="11dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="#2243 Gali no 3, Dhani Mohabatpur, Mandi Adampur,Hisar, Haryana 125052"/>
           </LinearLayout>
       </LinearLayout>

   </LinearLayout>



    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rs. 200/hrs"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:id="@+id/chargeTV" />

            <RatingBar
                android:id="@+id/listitemrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                style= "@style/CustomRatingBar"
                android:numStars="5"
                android:rating="2.3"
                android:stepSize="0.01"
                android:isIndicator="true"/>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
